<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="10dp"
        android:src="@drawable/hi2"
        />

    <TextView
        android:id="@+id/showText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewer"
        android:text="Welcome To Recogext!"
        android:textSize="30dp"
        android:maxLines="5"
        android:textAlignment ="center"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/captureImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Capture Image"
        android:background="#FF6200EE"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/detectText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/captureImage"
        android:layout_margin="10dp"

        android:background="#FF6200EE"
        android:text="Detect Text From The Image"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detectText"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:background="#008000"
        android:textColor="@color/white"
        android:text="Copy" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detectText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FF0000"
        android:textColor="@color/white"
        android:text="Reset" />


</RelativeLayout>